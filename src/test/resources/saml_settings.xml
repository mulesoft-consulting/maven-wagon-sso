<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <localRepository>tmp/repoDir</localRepository>
    <!-- Makes this easier to test and use URLs as AccessTokenFetcherImplTest does -->
    <proxies>
        <proxy>
            <id>our-proxy</id>
            <host>localhost</host>
            <active>true</active>
            <port>8081</port>
            <protocol>http</protocol>
            <nonProxyHosts>repo.maven.apache.org</nonProxyHosts>
        </proxy>
    </proxies>
    <servers>
        <server>
            <id>some-repo</id>
            <configuration>
                <samlIdpUrl>http://a_place_that_posts_saml_token</samlIdpUrl>
                <anypointProfileUrl>http://anypoint.test.com/profile_location/</anypointProfileUrl>
            </configuration>
        </server>
    </servers>
</settings>